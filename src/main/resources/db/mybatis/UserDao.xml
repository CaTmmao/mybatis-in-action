<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hcsp.mybatis.UserDao">
    <select id="getUserByPage" resultType="com.github.hcsp.mybatis.entity.User">
        select * from User
        <if test="name != null">
            where name = #{name}
        </if>
        <if test="start != null and end != null">
            limit #{start},#{end}
        </if>
    </select>
    <insert id="batchInsertUsers" parameterType="java.util.List">
        insert into User (id,name,tel,address) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.id}, #{item.name}, #{item.tel}, #{item.address})
        </foreach>
    </insert>
    <update id="updateUserNotNull">
        update User
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUserById" parameterType="Integer">
        delete from user where id=#{id}
    </delete>
    <select id="selectUserById" resultType="com.github.hcsp.mybatis.entity.User">
        select * from User where id = #{id}
    </select>

</mapper>