<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hcsp.UserMapper">
    <select id="getUserByPage" parameterType="map" resultType="User">
        select * from "USER"
        <where>
            <if test="username!=null">
                name = #{username}
            </if>
        </where>
        limit #{offset},#{limit}
    </select>

    <select id="getUserCount" parameterType="string" resultType="int">
        select count(id) from "USER"
        <where>
            <if test="username!=null">
                name = #{whatever}
            </if>
        </where>
    </select>

    <insert id="batchInsertUsers" parameterType="list">
        INSERT INTO
        user (name, tel, address)
        VALUES
        <foreach collection="list" item="user" separator=",">
            (#{user.name}, #{user.tel}, #{user.address})
        </foreach>
    </insert>

    <update id="updateUser" parameterType="User">
        update user
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="tel != null">tel=#{tel},</if>
            <if test="address != null">address=#{address},</if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteUserById">
        delete from user
        <where>
            id = #{id}
        </where>
    </delete>

    <select id="selectUserById" resultType="User">
        select * from "USER"
        <where>
                id = #{id}
        </where>
    </select>
</mapper>