<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hcsp.mybatis.OrderDao">
    <resultMap type="Order" id="orderMap">
        <id property="id" column="order_id"/>
        <result property="totalPrice" column="total_price"/>
        <association property="user" javaType="User">
            <id property="id" column="user_id"/>
            <result property="name" column="user_name"/>
            <result property="tel" column="tel"/>
            <result property="address" column="address"/>
        </association>
        <association property="goods" javaType="Goods">
            <id property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
            <result property="price" column="price"/>
        </association>

    </resultMap>

    <select id="getInnerJoinOrders" resultMap="orderMap">
        select "ORDER".ID as order_id,
        GOODS_NUM * GOODS_PRICE as total_price,
        U.id as user_id,
        U.name as user_name,
        U.tel,
        U.address,
        U.created_at,
        U.updated_at,
        G2.ID as goods_id,
        G2.NAME as goods_name,
        G2.PRICE
        from "ORDER"
        inner join GOODS G2 on G2.ID = "ORDER".GOODS_ID
        inner join USER U on U.ID = "ORDER".USER_ID;
    </select>
</mapper>