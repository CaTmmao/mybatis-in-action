<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hcsp.mybatis.UserDao">
    <select id="getTotalPage" resultType="Integer">
        select CEILING((select count(1) from USER
        <if test="name != null">
            where NAME = #{name}
        </if>
        )*1.0/#{pageSize}) as total_page
    </select>
    <select id="getUserList" resultType="User">
        select
        id,
        name,
        tel,
        address
        from USER
        <if test="name != null">
            where NAME = #{name}
        </if>
        limit #{pageSize} offset #{offset}
    </select>
    <insert id="batchInsertUsers" parameterType="User">
        insert into USER (NAME, TEL, ADDRESS, CREATED_AT, UPDATED_AT)
        VALUES (#{name}, #{tel}, #{address}, now(), now())
    </insert>
    <update id="updateUser" parameterType="User">
        update USER
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            UPDATED_AT = now()
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUserById">
        delete from USER where ID=#{id}
    </delete>
    <select id="selectUserById" resultType="User">
        select * from USER where ID = #{id}
    </select>
</mapper>