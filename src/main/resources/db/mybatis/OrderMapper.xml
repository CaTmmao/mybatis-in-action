<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hcsp.OrderMapper">
    <select id="getInnerJoinOrders" resultMap="Order">
        select
        o.id as order_id,
        g.id as goods_id,
        g.name as goods_name,
        g.price as goods_price,
        u.id as user_id,
        u.name as user_name,
        u.tel as user_tel,
        u.address as user_address,
        (o.goods_price * o.goods_num) as total_price
        from
        "ORDER" o
        inner join "GOODS" g on o.GOODS_ID = g.ID
        inner join "USER" u on o.USER_ID = u.ID
        <where>
            g.NAME is not null and u.NAME is not null
        </where>
    </select>

    <resultMap id="Order" type="Order">
        <result property="id" column="order_id"/>
        <result property="totalPrice" column="total_price"/>
        <association property="user" javaType="User">
            <result property="id" column="user_id"/>
            <result property="name" column="user_name"/>
            <result property="tel" column="user_tel"/>
            <result property="address" column="user_address"/>
        </association>
        <association property="goods" javaType="GOODS">
            <result property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
            <result property="price" column="goods_price"/>
        </association>
    </resultMap>
</mapper>