<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderMapper">
    <select id="getAllOrders" resultMap="order">
        select o.id as order_id,u.id as user_id,u.name as user_name,u.tel as user_tel,u.address as user_address,
        g.id as goods_id,g.name as goods_name,g.price as goods_price,
        o.goods_num * o.goods_price as total_price
        from "ORDER" o
        inner join user u on o.user_id=u.id
        inner join goods g on o.goods_id=g.id
    </select>

    <resultMap id="order" type="Order">
        <id property="id" column="order_id"/>
        <result property="totalPrice" column="total_price"/>
        <association property="user" javaType="User">
            <id property="id" column="user_id"/>
            <id property="name" column="user_name"/>
            <id property="tel" column="user_tel"/>
            <id property="address" column="user_address"/>
        </association>
        <association property="goods" javaType="Goods">
            <id property="id" column="goods_id"/>
            <id property="name" column="goods_name"/>
            <id property="price" column="goods_price"/>
        </association>
    </resultMap>
</mapper>