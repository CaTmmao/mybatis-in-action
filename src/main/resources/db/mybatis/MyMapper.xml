<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="db.mybatis.MyMapper">
    <select id="getUserByPage" parameterType="map" resultType="User">
        select * from USER
        <if test="username != null">
            where NAME = #{username}
        </if>
        limit #{offset}, #{limit}
    </select>

    <select id="getUserCount" parameterType="string" resultType="int">
        select count(1)
        from USER
        <if test="username != null">
            where NAME = #{username}
        </if>
    </select>

    <insert id="batchInsertUsers" parameterType="list">
        insert into USER(NAME, TEL, ADDRESS) VALUES
        <foreach item="item" index="index" collection="list"
                 separator=",">
            (#{item.name}, #{item.tel}, #{item.address})
        </foreach>

    </insert>

    <update id="updateUser" parameterType="User">
        update USER
        <set>
            <if test="name != null">NAME=#{name},</if>
            <if test="tel != null">TEL=#{tel},</if>
            <if test="address != null">ADDRESS=#{address}</if>
        </set>
        where ID = #{id}
    </update>

    <select id="selectUserById" parameterType="int" resultType="User">
        select *
        from USER
        where ID = #{id}
    </select>

    <delete id="deleteUserById" parameterType="int">
        delete USER
        where ID = #{id}
    </delete>

    <select id="getInnerJoinOrders" resultMap="OrderDetail">
        select O.ID AS ORDER_ID, U.NAME AS USER_NAME,
               G.NAME AS GOODS_NAME, (O.GOODS_PRICE * O.GOODS_NUM) AS TOTAL_PRICE
        from `ORDER` O
                 INNER JOIN USER U ON O.USER_ID = U.ID
                 INNER JOIN GOODS G ON O.GOODS_ID = G.ID
        WHERE U.NAME IS NOT NULL
          AND G.NAME IS NOT NULL
    </select>

    <resultMap id="OrderDetail" type="Order">
        <result property="id" column="ORDER_ID"/>
        <result property="totalPrice" column="TOTAL_PRICE"/>
        <association property="user" javaType="User">
            <result property="name" column="USER_NAME"/>
        </association>
        <association property="goods" javaType="Goods">
            <result property="name" column="GOODS_NAME"/>
        </association>
    </resultMap>
</mapper>
